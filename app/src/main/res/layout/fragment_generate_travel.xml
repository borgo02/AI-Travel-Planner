<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constrained_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/source_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sourceText"/>

            <EditText
                android:id="@+id/source_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/actual_position_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/actualPosText" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/actual_position_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/destination_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/destText" />

            <EditText
                android:id="@+id/dest_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/automatic_dest_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/autoDestText" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/automatic_dest_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/days_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/daysText" />

            <EditText
                android:id="@+id/days_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hotel_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hotelText" />

                <CheckBox
                    android:id="@+id/hotel_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/budget_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/economicBudgetText" />

            <RadioGroup
                android:id="@+id/budget_radio_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/small_budget_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/economicBudgetText" />

                <RadioButton
                    android:id="@+id/medium_budget_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/middleBudgetText" />

                <RadioButton
                    android:id="@+id/high_budget_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/highBudgetText" />
            </RadioGroup>

            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/generateTravelBtn" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>