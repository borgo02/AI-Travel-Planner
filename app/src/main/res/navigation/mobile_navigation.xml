<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.aitravelplanner.ui.interests.InterestsFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.aitravelplanner.ui.dashboard.DashboardFragment"
        android:label="@string/title_travel"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.aitravelplanner.ui.profile.ProfileFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_fragment_profile_to_fragment_shared_profile"
            app:destination="@id/navigation_shared_travels" />
    </fragment>

    <fragment
        android:id="@+id/navigation_shared_travels"
        android:name="com.example.aitravelplanner.ui.profile.SharedTravelsFragment"
        android:label="@string/shared_travels"
        tools:layout="@layout/fragment_shared_travels_profile" />
</navigation>